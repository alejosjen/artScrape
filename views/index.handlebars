    </div>
    <div class="col">
      <h2>Devoured!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burger-edit devoured=false}}
        {{/if}}
        {{/each}}
      </ul>


    </div>
  </div>


