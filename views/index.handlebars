<div class="container">
  <div class="row">
    <img class="burgerImage mx-auto mt-4" src="/assets/images/burger.png" alt="burger">
  </div>
  <div class="row">
    <h1 class="mx-auto">Art Newspaper Scrape</h1>
  </div>
  <div class="row">
    <div class="col">
      <h2>Articles</h2>

      <ul>
        {{#each articleTitle}}
        {{#unless saved}}
        {{> article-edit saved=false}}
        {{/unless}}
        {{/each}}
      </ul>

    </div>
    <div class="col">
      <h2>Articles</h2>
